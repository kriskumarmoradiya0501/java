package com.company;

import java.util.Scanner;

public class Practiceset2 {
    public static void main(String[] args) {
//        Q1 what will be the result of the following expression float a=7/4*92

        float a = 7.0f/4.0f*9.0f/2.0f;
        System.out.println(a);

//        Q2 write a java program to encrypt a grade by adding 8 to it decrypt it to show the correct grade.
        char grade = 'k';
        grade = (char)(grade+8);
        System.out.println(grade);

        grade = (char)(grade-8);
        System.out.println(grade);

//        Q3 use comparison operators to find out whether a given number is greater than user entered number or not.
        int num1=50;
        Scanner s =new Scanner(System.in);
        int num2 = s.nextInt();

        System.out.println(num1+" > "+num2+" = "+(num1>num2));

//        Q4 write the following expression in a java program v2 - u2 / 2*a*s
        System.out.println("Enter value of v");
        Float v = s.nextFloat();

        System.out.println("Enter value of u");
        Float u = s.nextFloat();

        System.out.println("Enter value of a");
        Float a1 = s.nextFloat();

        System.out.println("Enter value of s");
        Float s1 = s.nextFloat();
        System.out.println("Answer = "+(((v*v)*(u*u))/(2*a1*s1)));

//       Q5 find the value of following expression int x=7 int a =7.49/7+35/7 value of a = ? .
        int x=7;

        int a2 = 7*49/7+35/7;

        System.out.println(a2);
    }
}
